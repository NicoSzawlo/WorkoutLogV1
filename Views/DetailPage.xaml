<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutLogV1.Views.DetailPage"
             xmlns:viewmodels="clr-namespace:WorkoutLogV1.ViewModels;assembly=WorkoutLogV1"
             x:DataType="viewmodels:DetailViewModel"
             Title="DetailPage">
    <VerticalStackLayout>
        <Label 
            Text="Name"
            FontSize="Medium"
            HorizontalOptions="Center"/>
        <Entry Text="{Binding DetailedTraining.Name}"/>
        <Label 
            Text="Date"
            FontSize="Medium"
            HorizontalOptions="Center"/>
        <DatePicker Date="{Binding DetailedTraining.Date}"/>
        <Label 
            Text="Note"
            FontSize="Medium"
            HorizontalOptions="Center"/>
        <Entry Text="{Binding DetailedTraining.Note}"/>
    </VerticalStackLayout>
</ContentPage>