<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:viewmodels="clr-namespace:WorkoutLogV1.ViewModels;assembly=WorkoutLogV1"
               xmlns:model="clr-namespace:WorkoutLogV1.Models"
               x:DataType="viewmodels:AddEntryViewModel"
               x:Class="WorkoutLogV1.Views.AddEntryPopup"
               Size="500,500,500,50">
    <toolkit:Popup.BindingContext>
        <viewmodels:AddEntryViewModel/>
    </toolkit:Popup.BindingContext>
    <VerticalStackLayout>
        <!-- General Workout properties -->
        <Label Text="Date"
               FontSize="Large"
               HorizontalOptions="Center"/>
        <DatePicker Date="{Binding Date}"/>
        <Label Text="Name"
               FontSize="Large"
               HorizontalOptions="Center"/>
        <Entry Text="{Binding Name}"/>
        <Label Text="Note"
               FontSize="Large"
               HorizontalOptions="Center"/>
        <Entry Text="{Binding Note}"/>
        <!-- Weight workout Controls -->
        <VerticalStackLayout Margin="25">
            <Label Text="Weight Training"
               FontSize="Large"
               HorizontalOptions="Center"/>
            <Label Text="Reps"
               FontSize="Medium"
               HorizontalOptions="Center"/>
            <Entry Text="{Binding Reps}"/>
            <Label Text="Weight"
               FontSize="Medium"
               HorizontalOptions="Center"/>
            <Entry Text="{Binding Weight}"/>
            <VerticalStackLayout.Triggers>
                <DataTrigger TargetType="VerticalStackLayout"
                             Binding="{Binding IsEndurance}"
                             Value="true">
                    <Setter Property="IsVisible" Value="false"/>
                </DataTrigger>
                <DataTrigger TargetType="VerticalStackLayout"
                             Binding="{Binding IsEndurance}"
                             Value="false">
                    <Setter Property="IsVisible" Value="true"/>
                </DataTrigger>
            </VerticalStackLayout.Triggers>
        </VerticalStackLayout>
        <!-- Cardio workout Controls -->
        <VerticalStackLayout Margin="25">
            <Label Text="Weight Training"
               FontSize="Large"
               HorizontalOptions="Center"/>
            <Label Text="Reps"
               FontSize="Medium"
               HorizontalOptions="Center"/>
            <Entry Text="{Binding Reps}"/>
            <Label Text="Weight"
               FontSize="Medium"
               HorizontalOptions="Center"/>
            <Entry Text="{Binding Weight}"/>
            <VerticalStackLayout.Triggers>
                <DataTrigger TargetType="VerticalStackLayout"
                             Binding="{Binding IsEndurance}"
                             Value="true">
                    <Setter Property="IsVisible" Value="true"/>
                </DataTrigger>
                <DataTrigger TargetType="VerticalStackLayout"
                             Binding="{Binding IsEndurance}"
                             Value="false">
                    <Setter Property="IsVisible" Value="false"/>
                </DataTrigger>
            </VerticalStackLayout.Triggers>
        </VerticalStackLayout>
        <Button Command="{Binding SwitchEnduranceCommand}"
                Text="Change Workout Type">
            <Button.Triggers>
                <DataTrigger TargetType="Button"
                             Binding="{Binding IsEndurance}"
                             Value="true">
                    <Setter Property="BackgroundColor" Value="LightGrey"/>
                </DataTrigger>
                <DataTrigger TargetType="Button"
                             Binding="{Binding IsEndurance}"
                             Value="false">
                    <Setter Property="BackgroundColor" Value="White"/>
                </DataTrigger>
            </Button.Triggers>
        </Button>
        <Button Command="{Binding AddTrainingCommand}"
                Text="Add" 
                WidthRequest="200"
                HorizontalOptions="Center"/>
    </VerticalStackLayout>

</toolkit:Popup>