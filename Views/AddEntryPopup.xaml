<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:viewmodels="clr-namespace:WorkoutLogV1.ViewModels;assembly=WorkoutLogV1"
               x:DataType="viewmodels:AddEntryViewModel"
               x:Class="WorkoutLogV1.Views.AddEntryPopup">
    <toolkit:Popup.BindingContext>
        <viewmodels:AddEntryViewModel/>
    </toolkit:Popup.BindingContext>
    
    <VerticalStackLayout>
        <Label Text="Name"
               FontSize="Large"/>
        <Entry Text="{Binding Name}"/>
        <Button Command="{Binding AddTraining}"
                Text="Add"/>
    </VerticalStackLayout>

</toolkit:Popup>